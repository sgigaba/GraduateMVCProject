@{
}
<h1> User Profile Details </h1>
<br />

<div>
    <button type="button">
        <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Create">Create a new profile</a>
    </button>

</div>
<div>

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Country</th>
            <th>City</th>
        </tr>
        @foreach (var profile in Model)
        {
            <tr>
                <td>
                    @profile.Name
                </td>
                <td>
                    @profile.Surname
                </td>
                <td>
                    @profile.DateOfBirth.
                </td>
                <td>
                    @profile.Age
                </td>
                <td>
                    @profile.Country
                </td>
                <td>
                    @profile.City
                </td>

                <td> <a class="nav-link text-dark" asp-area = "" asp-controller="Profile" asp-action ="Edit">Edit</a></td>
            </tr>
        }
    </table>


